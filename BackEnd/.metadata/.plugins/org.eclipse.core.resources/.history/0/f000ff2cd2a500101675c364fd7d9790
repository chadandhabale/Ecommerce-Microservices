package com.chandu.Service;

import java.util.List;
import com.chandu.Entity.Product;

/**
 * Service interface for managing {@link Product} entities.
 * Provides methods for CRUD operations, category filtering, and keyword search.
 */
public interface ProductService {

    /**
     * Retrieves all products from the database.
     *
     * @return a list of all available products
     */
    List<Product> getAllProducts();

    /**
     * Retrieves a specific product by its ID.
     *
     * @param productId the ID of the product to fetch
     * @return the product entity if found
     * @throws RuntimeException if product not found
     */
    Product findProductById(Long productId);

    /**
     * Adds a new product to the system.
     *
     * @param product the product details to be added
     * @return the newly created product
     */
    Product addProduct(Product product);

    /**
     * Updates an existing product in the system.
     *
     * @param productId the ID of the product to update
     * @param updatedProduct the updated product details
     * @return the updated product
     */
    Product updateProduct(Long productId, Product updatedProduct); // âœ… Added for completeness

    /**
     * Deletes a product from the system by its ID.
     *
     * @param productId the ID of the product to delete
     */
    void deleteProduct(Long productId);

    /**
     * Retrieves all products belonging to the given category.
     *
     * @param category the category name
     * @return list of products in that category
     */
    List<Product> getProductsByCategory(String category);

    /**
     * Searches for products containing the given keyword in their names.
     *
     * @param keyword search term for product names
     * @return list of matching products
     */
    List<Product> searchProducts(String keyword);
}
