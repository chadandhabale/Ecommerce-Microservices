package com.chandu.DTO;

import java.time.LocalDateTime;
import java.util.List;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

/**
 * Data Transfer Object for transferring order details between layers.
 */
@Data
@AllArgsConstructor
@NoArgsConstructor
public class OrderDto {

    private Long id;  // ✅ Order ID (not product ID)

    /** Total amount of the order */
    private Double totalAmount;

    /** Date and time when the order was placed */
    private LocalDateTime orderDate;

    /** Customer (user) name who placed the order */
    private String userName;

    /** Customer email address */
    private String email;

    /** List of ordered items (product + quantity + price) */
    private List<OrderItemDto> orderItems;

    // ✅ Secondary constructor (when user details are not needed)
    public OrderDto(Long id, Double totalAmount, LocalDateTime orderDate, List<OrderItemDto> orderItems) {
        this.id = id;
        this.totalAmount = totalAmount;
        this.orderDate = orderDate;
        this.orderItems = orderItems;
    }
}