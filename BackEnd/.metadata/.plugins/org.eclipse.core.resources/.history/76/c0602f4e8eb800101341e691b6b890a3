package com.example.paymentGateway.Controller;

import java.util.List;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.example.paymentGateway.DTO.PaymentRequestDTO;
import com.example.paymentGateway.DTO.PaymentResponseDTO;
import com.example.paymentGateway.DTO.PaymentStatisticsDTO;
import com.example.paymentGateway.DTO.PaymentVerificationDTO;
import com.example.paymentGateway.Entity.Payment;
import com.example.paymentGateway.Entity.PaymentStatus;
import com.example.paymentGateway.Service.PaymentService;
import com.example.paymentGateway.Service.EmailService; // ADD THIS IMPORT

import jakarta.validation.Valid;
import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@RestController
@RequestMapping("/api/payments")
@RequiredArgsConstructor
public class PaymentController {

    private final PaymentService paymentService;
    private final EmailService emailService; // ADD THIS

    @PostMapping("/create")
    public ResponseEntity<PaymentResponseDTO> createPayment(@Valid @RequestBody PaymentRequestDTO paymentRequest) {
        log.info("Received payment creation request for order: {}", paymentRequest.getOrderId());
        PaymentResponseDTO response = paymentService.createPayment(paymentRequest);
        return ResponseEntity.status(HttpStatus.CREATED).body(response);
    }

    @PostMapping("/verify")
    public ResponseEntity<?> verifyPayment(@Valid @RequestBody PaymentVerificationDTO verificationDTO) {
        log.info("Received payment verification for order: {}", verificationDTO.getRazorpayOrderId());
        boolean isValid = paymentService.verifyPayment(verificationDTO);
        
        if (isValid) {
            return ResponseEntity.ok().body("Payment verified successfully");
        } else {
            return ResponseEntity.status(HttpStatus.BAD_REQUEST).body("Payment verification failed");
        }
    }

    // ✅ ADD THIS MISSING ENDPOINT - Required by Feign Client
    @PutMapping("/update-status/{razorpayOrderId}")
    public ResponseEntity<PaymentResponseDTO> updatePaymentStatus(
            @PathVariable String razorpayOrderId,
            @RequestParam String status) {
        
        log.info("Received status update request for: {} to {}", razorpayOrderId, status);
        
        try {
            PaymentStatus paymentStatus = PaymentStatus.valueOf(status.toUpperCase());
            PaymentResponseDTO response = paymentService.updatePaymentStatus(razorpayOrderId, paymentStatus);
            return ResponseEntity.ok(response);
            
        } catch (IllegalArgumentException e) {
            log.error("Invalid payment status: {}", status);
            return ResponseEntity.badRequest().build();
        } catch (Exception e) {
            log.error("Failed to update payment status: {}", e.getMessage());
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).build();
        }
    }

    @GetMapping("/order/{razorpayOrderId}")
    public ResponseEntity<Payment> getPayment(@PathVariable String razorpayOrderId) {
        Payment payment = paymentService.getPaymentByOrderId(razorpayOrderId);
        return ResponseEntity.ok(payment);
    }

    @GetMapping("/user/{userId}")
    public ResponseEntity<List<Payment>> getUserPayments(@PathVariable Long userId) {
        List<Payment> payments = paymentService.getPaymentsByUser(userId);
        return ResponseEntity.ok(payments);
    }

    @GetMapping("/status/{status}")
    public ResponseEntity<List<Payment>> getPaymentsByStatus(@PathVariable PaymentStatus status) {
        List<Payment> payments = paymentService.getPaymentsByStatus(status);
        return ResponseEntity.ok(payments);
    }

    @GetMapping("/recent/{days}")
    public ResponseEntity<List<Payment>> getRecentPayments(@PathVariable int days) {
        List<Payment> payments = paymentService.getRecentPayments(days);
        return ResponseEntity.ok(payments);
    }

    @GetMapping("/statistics")
    public ResponseEntity<PaymentStatisticsDTO> getStatistics() {
        PaymentStatisticsDTO statistics = paymentService.getPaymentStatistics();
        return ResponseEntity.ok(statistics);
    }

    // ✅ FIX THIS ENDPOINT - Change return type to DTO
    @PutMapping("/{razorpayOrderId}/status")
    public ResponseEntity<PaymentResponseDTO> updateStatus(
            @PathVariable String razorpayOrderId,
            @RequestParam PaymentStatus status) {
        try {
            PaymentResponseDTO response = paymentService.updatePaymentStatus(razorpayOrderId, status);
            return ResponseEntity.ok(response);
        } catch (Exception e) {
            log.error("Failed to update status: {}", e.getMessage());
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).build();
        }
    }

    @GetMapping("/{razorpayOrderId}/validate")
    public ResponseEntity<Boolean> validatePayment(@PathVariable String razorpayOrderId) {
        boolean isValid = paymentService.isPaymentValid(razorpayOrderId);
        return ResponseEntity.ok(isValid);
    }

    // ✅ FIX TEST ENDPOINT - Update to use DTO
    @PostMapping("/test-verify/{razorpayOrderId}")
    public ResponseEntity<String> testVerifyPayment(@PathVariable String razorpayOrderId) {
        try {
            log.info("TEST: Manually verifying payment: {}", razorpayOrderId);
            
            // Update payment status to SUCCESS - now returns DTO
            PaymentResponseDTO paymentResponse = paymentService.updatePaymentStatus(razorpayOrderId, PaymentStatus.SUCCESS);
            
            // Get payment details for email (use the entity method)
            Payment payment = paymentService.getPaymentByOrderId(razorpayOrderId);
            
            // Send email
            if (payment.getCustomerEmail() != null && !payment.getCustomerEmail().isBlank()) {
                String customerName = payment.getCustomerName() != null ? payment.getCustomerName() : "Customer";
                emailService.sendPaymentSuccessEmail(
                    payment.getCustomerEmail(),
                    customerName,
                    payment.getAmount(),
                    payment.getOrderId()
                );
            }
            
            log.info("✅ TEST: Payment manually verified: {}", razorpayOrderId);
            return ResponseEntity.ok("Payment manually verified for testing");
            
        } catch (Exception e) {
            log.error("❌ TEST: Manual verification failed: {}", e.getMessage());
            return ResponseEntity.status(HttpStatus.BAD_REQUEST)
                    .body("Manual verification failed: " + e.getMessage());
        }
    }

    @PostMapping("/test-email")
    public ResponseEntity<String> testEmail(@RequestParam String email) {
        try {
            // Test email functionality
            emailService.sendPaymentSuccessEmail(email, "Test Customer", 100.0, 1L);
            return ResponseEntity.ok("Test email sent successfully to: " + email);
        } catch (Exception e) {
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR)
                    .body("Email test failed: " + e.getMessage());
        }
    }
}