package com.example.paymentGateway.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.web.servlet.config.annotation.CorsRegistry;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;

@Configuration
public class GlobalCorsConfig {
    
    @Bean
    public WebMvcConfigurer corsConfigurer() {
        return new WebMvcConfigurer() {
            @Override
            public void addCorsMappings(CorsRegistry registry) {
                registry.addMapping("/**")
                        .allowedOrigins(
                            // Frontend Development Servers
                            "http://127.0.0.1:5500",
                            "http://localhost:5500",
                            "http://127.0.0.1:5501", 
                            "http://localhost:5501",
                            "http://localhost:3000",
                            
                            // Backend Services & API Gateway
                            "http://localhost:8080",  // E-commerce Service
                            "http://localhost:8081",  // E-commerce Service (alternative)
                            "http://localhost:9091",  // Payment Service itself
                            "http://localhost:333",   // âœ… ADDED: API Gateway
                            
                            // Common frontend ports
                            "http://localhost:4200",  // Angular
                            "http://localhost:5173",  // Vite/React
                            "http://localhost:3001",  // React (alternative)
                            "http://localhost:5174"   // Vite (alternative)
                        )
                        .allowedMethods("GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH")
                        .allowedHeaders("*")
                        .exposedHeaders("Authorization", "Content-Type", "X-Requested-With")
                        .allowCredentials(true)
                        .maxAge(3600);
            }
        };
    }
}