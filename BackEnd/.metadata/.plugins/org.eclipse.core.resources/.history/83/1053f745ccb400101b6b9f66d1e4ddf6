spring.application.name=ApiGateway
server.port=333

# ================= Eureka Config =================
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/
eureka.instance.hostname=localhost
eureka.instance.prefer-ip-address=false
eureka.client.register-with-eureka=true
eureka.client.fetch-registry=true

# ================= Gateway Config =================
spring.main.web-application-type=reactive

spring.cloud.gateway.discovery.locator.enabled=true
spring.cloud.gateway.discovery.locator.lower-case-service-id=false

# ==========================================================
# ðŸ§ USER CONTROLLER ROUTES (inside E_COMMERCE)
# ==========================================================
spring.cloud.gateway.routes[0].id=user-service
spring.cloud.gateway.routes[0].uri=lb://ECOMMERCE
spring.cloud.gateway.routes[0].predicates[0]=Path=/api/users/**

# ==========================================================
# ðŸ›’ PRODUCT CONTROLLER ROUTES (inside E_COMMERCE)
# ==========================================================
spring.cloud.gateway.routes[1].id=product-service
spring.cloud.gateway.routes[1].uri=lb://ECOMMERCE
spring.cloud.gateway.routes[1].predicates[0]=Path=/api/products/**

# ==========================================================
# ðŸ“¦ ORDER CONTROLLER ROUTES (inside E_COMMERCE)
# ==========================================================
spring.cloud.gateway.routes[2].id=order-service
spring.cloud.gateway.routes[2].uri=lb://ECOMMERCE
spring.cloud.gateway.routes[2].predicates[0]=Path=/api/orders/**

# ==========================================================
# ðŸ’³ PAYMENT CONTROLLER ROUTES (inside PaymentService)
# Request: /api/payments/** -> Sent to PaymentService as: /api/payments/**
# ==========================================================
spring.cloud.gateway.routes[3].id=payment-service
spring.cloud.gateway.routes[3].uri=lb://PaymentService
spring.cloud.gateway.routes[3].predicates[0]=Path=/api/payments/**