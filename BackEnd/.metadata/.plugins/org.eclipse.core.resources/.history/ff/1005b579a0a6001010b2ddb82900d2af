package com.chandu.DTO;

import lombok.*;
import java.util.Map;

/**
 * Data Transfer Object (DTO) representing a new order request
 * sent from the frontend during checkout.
 * 
 * Example JSON:
 * {
 *   "productQuantities": { "1": 2, "3": 1 },
 *   "totalAmount": 1499.0
 * }
 */
@Data
@NoArgsConstructor
@AllArgsConstructor
@ToString
public class OrderRequest {

    /** 
     * A map of product IDs to their ordered quantities.
     * Example: { 1: 2, 3: 1 }
     */
    private Map<Long, Integer> productQuantities;

    /** 
     * Total amount of the order before payment. 
     */
    private Double totalAmount;

    /** 
     * Optional: selected payment method (e.g. "Razorpay", "COD", etc.)
     */
    private String paymentMethod; // âœ… useful for multi-method checkout
}
